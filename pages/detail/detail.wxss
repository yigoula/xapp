    width: 0;
    height: 0;
    color: transparent;
}

.recommend_qs_box {
    width: 100rpx;
    margin-right: 0rpx;
    display: inline-block;
    box-shadow: 0 1px 2px #b8b8b8;
    background: #e4e4e4;
    font-size: 14px;
    text-align: center;
    font-family:微软雅黑;
    vertical-align:center;
    padding: 10px 10px;
}

.recommend_pic_box {
    width: 270px;
    display: inline-block;
    position: relative;
    overflow: hidden;
