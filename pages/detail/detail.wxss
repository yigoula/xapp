}

.good_people_li_bar02_em_color {
    color: #777;   
}

.good_people_li_bar03_em_color {
    color: #f60;   
}

.good_shaidan {
    padding: 10px 10px;
    justify-content: space-around;
    display:flex;
    flex-direction: row;
