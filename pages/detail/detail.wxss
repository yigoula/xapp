.good_detail_foot {
    position: fixed;
    bottom: 0rpx;
    width: 100%;
    background: #fff;
    z-index: 99999;
    padding: 8px 0px 8px 0px;
    border-top: 1px solid #dcdcdc;
    left: 0px;
    justify-content: space-around;
    display:flex;
    flex-direction: row;
}

.good_shopping_button {
    margin-right: 2%;
    margin-left: 1%;
    
    display: inline-block;
    color: #fff;
    width: 42%;
    height: 36px;
    line-height: 36px;
    text-align: center;
    font-size: 16px;
    border-radius: 3px;
